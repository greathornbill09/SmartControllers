<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_light_controller"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/home_screen"
    tools:context="com.hornbill.great.connectingsmartthings.LightController">

    <TableLayout
        android:id="@+id/scheduleDetails"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/switchStatus"
        android:layout_marginBottom="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_height="fill_parent"
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/image1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:scaleType="center"
                android:background="@layout/cell_layout"
                android:src="@drawable/lightbutton" />

            <ImageView
                android:id="@+id/image1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:scaleType="center"
                android:background="@layout/cell_layout"
                android:src="@drawable/lightbutton" />

            <ImageView
                android:id="@+id/image1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:scaleType="center"
                android:background="@layout/cell_layout"
                android:src="@drawable/lightbutton" />

            <ImageView
                android:id="@+id/image1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:scaleType="center"
                android:background="@layout/cell_layout"
                android:src="@drawable/lightbutton" />

            <ImageView
                android:id="@+id/image1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:scaleType="center"
                android:background="@layout/cell_layout"
                android:src="@drawable/lightbutton" />

            <ImageView
                android:id="@+id/image1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:scaleType="center"
                android:background="@layout/cell_layout"
                android:src="@drawable/lightbutton" />

            <ImageView
                android:id="@+id/image1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:scaleType="center"
                android:background="@layout/cell_layout"
                android:src="@drawable/lightbutton" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/TextView01" android:text="SUN\n9:30\npm\n01:10"
                android:layout_weight="1" android:background="@color/Black"
                android:textColor="@color/White"
                android:padding="3dip"
                android:textSize="12dp"
                android:gravity="center"
                android:layout_width="0dp" />

            <TextView
                android:id="@+id/TextView02" android:text="MON\n9:30\npm\n01:10"
                android:layout_weight="1" android:background="@color/Black"
                android:textColor="@color/White"
                android:padding="3dip"
                android:textSize="12dp"
                android:gravity="center"
                android:layout_width="0dp" />

            <TextView
                android:id="@+id/TextView03" android:text="TUE\n9:30\npm\n01:10"
                android:layout_weight="1" android:background="@color/Black"
                android:textColor="@color/White"
                android:padding="3dip"
                android:textSize="12dp"
                android:gravity="center"
                android:layout_width="0dp" />

            <TextView
                android:id="@+id/TextView04" android:text="WED\n9:30\npm\n01:10"
                android:layout_weight="1" android:background="@color/Black"
                android:textColor="@color/White"
                android:padding="3dip"
                android:textSize="12dp"
                android:gravity="center"
                android:layout_width="0dp" />

            <TextView
                android:id="@+id/TextView05" android:text="THU\n9:30\npm\n01:10"
                android:layout_weight="1" android:background="@color/Black"
                android:textColor="@color/White"
                android:padding="3dip"
                android:textSize="12dp"
                android:gravity="center"
                android:layout_width="0dp" />

            <TextView
                android:id="@+id/TextView06" android:text="FRI\n9:30\npm\n01:10"
                android:layout_weight="1" android:background="@color/Black"
                android:textColor="@color/White"
                android:padding="3dip"
                android:textSize="12dp"
                android:gravity="center"
                android:layout_width="0dp" />

            <TextView
                android:id="@+id/TextView07" android:text="SAT\n9:30\npm\n01:10"
                android:layout_weight="1" android:background="@color/Black"
                android:textColor="@color/White"
                android:padding="3dip"
                android:textSize="12dp"
                android:gravity="center"
                android:layout_width="0dp" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/switchStatus"
        android:text="On/Off"
        android:textSize="20dp"
        android:textColor="@color/White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dispschedule"
        android:layout_marginBottom="5dp"
        android:layout_alignBaseline="@+id/mySwitch"
        android:layout_alignBottom="@+id/mySwitch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Switch
        android:id="@+id/mySwitch"
        android:textColor="@color/White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dispschedule"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="0dp"
        android:layout_toRightOf="@+id/scheduleTrigger"
        android:layout_toEndOf="@+id/scheduleTrigger"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/dispschedule"
        android:text="Schedule: Daily"
        android:textSize="18dp"
        android:textColor="@color/Black"
        android:background="@color/NavajoWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:gravity="center"
        android:layout_above="@+id/mySchedule"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="0dp"/>

    <Button
        android:id="@+id/mySchedule"
        android:textColor="@color/Black"
        android:background="@drawable/calendar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@+id/scheduleTrigger"
        android:layout_marginBottom="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/myScheduleDuration"
        android:textColor="@color/Black"
        android:background="@drawable/clock"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@+id/scheduleTrigger"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="60dp"
        android:layout_toRightOf="@+id/mySchedule"
        android:layout_toEndOf="@+id/mySchedule"/>

    <Spinner
        android:id="@+id/spinSelect"
        android:background="@drawable/recurrence"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:entries="@array/repeat"
        android:layout_above="@+id/scheduleTrigger"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="60dp"
        android:layout_toRightOf="@+id/myScheduleDuration"
        android:layout_toEndOf="@+id/myScheduleDuration" />

    <Button
        android:id="@+id/scheduleTrigger"
        android:text="Apply"
        android:textSize="15sp"
        android:textColor="@color/Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_default"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
