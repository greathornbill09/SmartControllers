<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_light_controller"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hornbill.great.connectingsmartthings.LightController">

    <Switch
        android:id="@+id/mySwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/mySchedule"
        android:layout_alignStart="@+id/mySchedule" />

    <TextView
        android:id="@+id/switchStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aqua Light On/Off"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignBottom="@+id/mySwitch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Select Date/Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switchStatus"
        android:layout_marginTop="19dp"
        android:id="@+id/ScheduleLighting"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:text="Date_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mySwitch"
        android:id="@+id/mySchedule"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:text="Set Duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/DurationOflighting"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/ScheduleLighting"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Hours_Min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myScheduleDuration"
        android:layout_alignBaseline="@+id/DurationOflighting"
        android:layout_alignBottom="@+id/DurationOflighting"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/scheduleDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="left"
        android:textAlignment="gravity"
        android:layout_alignParentBottom="true"
        android:textSize="22sp"
        android:marqueeRepeatLimit="marquee_forever"
        android:padding="5dp"
        android:lines="4"
        android:text="Schedule"
        android:background="@drawable/scheduledisplayborder"
        android:textAppearance="?android:attr/textAppearanceMedium"/>


    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinSelect"
        android:entries="@array/repeat"
        android:layout_below="@+id/myScheduleDuration"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FrequencyOflighting"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignTop="@+id/spinSelect"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/DurationOflighting"
        android:layout_marginTop="13dp" />

    <Button
        android:text="Schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scheduleTrigger"
        android:layout_below="@+id/FrequencyOflighting"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="27dp" />

</RelativeLayout>
