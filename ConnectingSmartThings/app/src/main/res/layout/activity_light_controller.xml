<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_light_controller"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/home_screen"
    tools:context="com.hornbill.great.connectingsmartthings.LightController">

    <TextView
        android:id="@+id/switchStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aqua Light On/Off"
        android:textColor="@color/White"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignBottom="@+id/mySwitch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:text="Recurrence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FrequencyOflighting"
        android:textColor="@color/White"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignTop="@+id/spinSelect"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/DurationOflighting"
        android:layout_marginTop="13dp" />

    <TextView
        android:text="Select Date/Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/ScheduleLighting"
        android:textColor="@color/White"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/switchStatus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Set Duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/DurationOflighting"
        android:textColor="@color/White"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/mySchedule"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:id="@+id/mySwitch"
        android:textColor="@color/White"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp"
        android:layout_height="38dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinSelect"
        android:textColor="@color/White"
        android:entries="@array/repeat"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/myScheduleDuration"
        android:layout_alignStart="@+id/myScheduleDuration"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Schedule"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:textColor="@color/White"
        android:id="@+id/scheduleTrigger"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scheduleDetails"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/FrequencyOflighting"
        android:layout_marginTop="30dp"
        android:layout_above="@+id/scheduleTrigger">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/TextView01" android:text="Schedule: Daily"
                android:layout_weight="1" android:background="@color/NavajoWhite"
                android:textColor="#000000"
                android:padding="5dip" android:gravity="center"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_height="fill_parent"
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/image1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:scaleType="center"
                android:background="@layout/cell_layout"
                android:src="@drawable/lightbutton" />

            <ImageView
                android:id="@+id/image1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:scaleType="center"
                android:background="@layout/cell_layout"
                android:src="@drawable/lightbutton" />

            <ImageView
                android:id="@+id/image1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:scaleType="center"
                android:background="@layout/cell_layout"
                android:src="@drawable/lightbutton" />

            <ImageView
                android:id="@+id/image1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:scaleType="center"
                android:background="@layout/cell_layout"
                android:src="@drawable/lightbutton" />

            <ImageView
                android:id="@+id/image1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:scaleType="center"
                android:background="@layout/cell_layout"
                android:src="@drawable/lightbutton" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_height="fill_parent"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/TextView01" android:text="SUN\n9:30pm\n01:10"
                android:layout_weight="1" android:background="@color/Black"
                android:textColor="@color/White"
                android:padding="3dip"
                android:textSize="13dp"
                android:gravity="center"
                android:layout_width="0dp" />

            <TextView
                android:id="@+id/TextView02" android:text="MON\n9:30pm\n01:10"
                android:layout_weight="1" android:background="@color/Black"
                android:textColor="@color/White"
                android:padding="3dip"
                android:textSize="13dp"
                android:gravity="center"
                android:layout_width="0dp" />

            <TextView
                android:id="@+id/TextView03" android:text="TUE\n9:30pm\n01:10"
                android:layout_weight="1" android:background="@color/Black"
                android:textColor="@color/White"
                android:padding="3dip"
                android:textSize="13dp"
                android:gravity="center"
                android:layout_width="0dp" />

            <TextView
                android:id="@+id/TextView04" android:text="WED\n9:30pm\n01:10"
                android:layout_weight="1" android:background="@color/Black"
                android:textColor="@color/White"
                android:padding="3dip"
                android:textSize="13dp"
                android:gravity="center"
                android:layout_width="0dp" />

            <TextView
                android:id="@+id/TextView05" android:text="THU\n9:30pm\n01:10"
                android:layout_weight="1" android:background="@color/Black"
                android:textColor="@color/White"
                android:padding="3dip"
                android:textSize="13dp"
                android:gravity="center"
                android:layout_width="0dp" />


        </TableRow>

    </TableLayout>

    <Button
        android:text="Hours_Min"
        android:layout_width="wrap_content"
        android:id="@+id/myScheduleDuration"
        android:textColor="@color/White"
        android:layout_alignBaseline="@+id/DurationOflighting"
        android:layout_alignBottom="@+id/DurationOflighting"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="38dp" />

    <Button
        android:text="Date_Time"
        android:layout_width="wrap_content"
        android:id="@+id/mySchedule"
        android:textColor="@color/White"
        android:layout_alignBaseline="@+id/ScheduleLighting"
        android:layout_alignBottom="@+id/ScheduleLighting"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="38dp" />

</RelativeLayout>
