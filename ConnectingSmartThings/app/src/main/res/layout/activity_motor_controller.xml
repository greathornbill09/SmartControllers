<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_motor_controller"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/home_screen"
    tools:context="com.hornbill.great.connectingsmartthings.MotorController">

    <Switch
        android:id="@+id/myMotorSwitch"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/White"
        android:layout_marginTop="13dp"
        android:layout_alignLeft="@+id/myValveSwitch"
        android:layout_alignStart="@+id/myValveSwitch"
        android:layout_height="38dp" />

    <TextView
        android:text="Recurrence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FrequencyOfMotor"
        android:layout_marginTop="10dp"
        android:textColor="@color/White"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignBottom="@+id/spinSelect" />

    <Switch
        android:id="@+id/myValveSwitch"
        android:layout_width="wrap_content"
        android:textColor="@color/White"
        android:layout_below="@+id/myMotorSwitch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_height="38dp" />

    <TextView
        android:text="Select Date/Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ScheduleMotor"
        android:layout_marginTop="40dp"
        android:textColor="@color/White"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignBaseline="@+id/myMotorSchedule"
        android:layout_alignBottom="@+id/myMotorSchedule"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Date_Time"
        android:layout_width="wrap_content"
        android:id="@+id/myMotorSchedule"
        android:textColor="@color/White"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/myValveSwitch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="38dp" />

    <Button
        android:text="Calibration Start"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:id="@+id/calibrate"
        android:textColor="@color/White"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/FrequencyOfMotor"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinSelect"
        android:entries="@array/repeat"
        android:layout_marginTop="10dp"
        android:textColor="@color/White"
        android:layout_below="@+id/myMotorSchedule"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scheduleDetails"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/calibrate"
        android:layout_above="@+id/scheduleTrigger"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/TextView01" android:text="Schedule: Daily"
                android:layout_weight="1" android:background="@color/NavajoWhite"
                android:textColor="#000000"
                android:padding="5dip" android:gravity="center"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_height="fill_parent"
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/image1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:scaleType="center"
                android:background="@layout/cell_layout"
                android:src="@drawable/motorbutton" />

            <ImageView
                android:id="@+id/image1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:scaleType="center"
                android:background="@layout/cell_layout"
                android:src="@drawable/motorbutton" />

            <ImageView
                android:id="@+id/image1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:scaleType="center"
                android:background="@layout/cell_layout"
                android:src="@drawable/motorbutton" />

            <ImageView
                android:id="@+id/image1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:scaleType="center"
                android:background="@layout/cell_layout"
                android:src="@drawable/motorbutton" />

            <ImageView
                android:id="@+id/image1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:scaleType="center"
                android:background="@layout/cell_layout"
                android:src="@drawable/motorbutton" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <TextView
                android:id="@+id/TextView01" android:text="SUN\n9:30pm"
                android:layout_weight="1" android:background="@color/Black"
                android:textColor="@color/White"
                android:padding="3dip"
                android:textSize="13dp"
                android:gravity="center"
                android:layout_width="0dp" />

            <TextView
                android:id="@+id/TextView02" android:text="MON\n9:30pm"
                android:layout_weight="1" android:background="@color/Black"
                android:textColor="@color/White"
                android:padding="3dip"
                android:textSize="13dp"
                android:gravity="center"
                android:layout_width="0dp" />

            <TextView
                android:id="@+id/TextView03" android:text="TUE\n9:30pm"
                android:layout_weight="1" android:background="@color/Black"
                android:textColor="@color/White"
                android:padding="3dip"
                android:textSize="13dp"
                android:gravity="center"
                android:layout_width="0dp" />

            <TextView
                android:id="@+id/TextView04" android:text="WED\n9:30pm"
                android:layout_weight="1" android:background="@color/Black"
                android:textColor="@color/White"
                android:padding="3dip"
                android:textSize="13dp"
                android:gravity="center"
                android:layout_width="0dp" />

            <TextView
                android:id="@+id/TextView05" android:text="THU\n9:30pm"
                android:layout_weight="1" android:background="@color/Black"
                android:textColor="@color/White"
                android:padding="3dip"
                android:textSize="13dp"
                android:gravity="center"
                android:layout_width="0dp" />


        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/valveSwitchStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aqua Valve On/Off"
        android:layout_marginTop="40dp"
        android:textColor="@color/White"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_above="@+id/myMotorSchedule"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/motorSwitchStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aqua Motor On/Off"
        android:textColor="@color/White"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_above="@+id/myValveSwitch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Schedule"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:textColor="@color/White"
        android:id="@+id/scheduleTrigger"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
