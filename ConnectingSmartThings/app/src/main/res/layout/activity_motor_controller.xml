<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_motor_controller"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hornbill.great.connectingsmartthings.MotorController">

    <Switch
        android:id="@+id/myMotorSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/myValveSwitch"
        android:layout_alignStart="@+id/myValveSwitch" />

    <TextView
        android:id="@+id/motorSwitchStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aqua Motor On/Off"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignBottom="@+id/myMotorSwitch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/scheduleDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textAlignment="gravity"
        android:layout_alignParentBottom="true"
        android:textSize="22sp"
        android:marqueeRepeatLimit="marquee_forever"
        android:padding="5dp"
        android:lines="4"
        android:background="@drawable/scheduledisplayborder"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FrequencyOfMotor"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignBottom="@+id/spinSelect" />

    <Switch
        android:id="@+id/myValveSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myMotorSwitch"
        android:layout_alignRight="@+id/myMotorSchedule"
        android:layout_alignEnd="@+id/myMotorSchedule"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/valveSwitchStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aqua Valve On/Off"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignBottom="@+id/myValveSwitch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Select Date/Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ScheduleMotor"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignBaseline="@+id/myMotorSchedule"
        android:layout_alignBottom="@+id/myMotorSchedule"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Set Duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DurationOfMotor"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/myMotorSchedule"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <Button
        android:text="Hours_Min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myMotorScheduleDuration"
        android:layout_below="@+id/myMotorSchedule"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp" />

    <Button
        android:text="Date_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myMotorSchedule"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/myValveSwitch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinSelect"
        android:entries="@array/repeat"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:text="Schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scheduleTrigger"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Calibration Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calibrate"
        android:layout_above="@+id/scheduleDetails"
        android:layout_toLeftOf="@+id/scheduleTrigger"
        android:layout_toStartOf="@+id/scheduleTrigger"
        android:layout_marginBottom="23dp" />

</RelativeLayout>
