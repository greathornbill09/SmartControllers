<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controlPage">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/switchStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equipment On/Off"
        android:textColor="@color/White"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="60dp"
        android:layout_marginRight="25dp"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_compat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:textOff="OFF"
        android:textOn="ON"
        android:layout_gravity="end"
        android:layout_marginTop="60dp"
        android:layout_marginRight="35dp"/>

    <TextView
        android:text="Date/Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ScheduleLighting"
        android:textColor="@color/White"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="120dp"
        android:layout_marginRight="25dp"
        />
    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/mySchedule"
        android:textColor="@color/Black"
        android:background="@drawable/calendar"
        android:layout_gravity="end"
        android:layout_marginTop="110dp"
        android:layout_marginRight="25dp"
        />

    <TextView
        android:text="Duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DurationOflighting"
        android:textColor="@color/White"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="180dp"
        android:layout_marginRight="25dp"/>

    <Button
        android:layout_width="65dp"
        android:id="@+id/myScheduleDuration"
        android:textColor="@color/Black"
        android:layout_height="65dp"
        android:background="@drawable/clock"
        android:layout_gravity="end"
        android:layout_marginTop="170dp"
        android:layout_marginRight="25dp"/>

    <TextView
        android:text="Recurrence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FrequencyOflighting"
        android:textColor="@color/White"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="240dp"
        android:layout_marginRight="25dp"
        />

    <Spinner
        android:id="@+id/spinSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12pt"
        android:textColor="@color/White"
        android:entries="@array/repeat"
        style="@style/SpinnerTheme"
        android:layout_marginTop="240dp"
        android:layout_gravity="end"
        />

    <Button
        android:text="Schedule"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Black"
        android:id="@+id/scheduleTrigger"
        android:background="@android:drawable/btn_default"
        android:layout_marginTop="150dp"
        android:layout_gravity="center"
        />
</FrameLayout>
